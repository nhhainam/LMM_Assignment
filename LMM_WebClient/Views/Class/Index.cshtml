@model IEnumerable<LMM_WebClient.Entity.Class>

<html lang="en">
<head>
	<title>Learning Material Management</title>
	<meta charset="UTF-8">
	<meta name="description" content="Learning Material Management">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Stylesheets -->
	<link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/font-awesome.min.css" />
	<link rel="stylesheet" href="~/css/style.css" />

	<style>
		body {
			background: url('@Url.Content("~/img/bg.jpg")') no-repeat center center fixed;
			background-size: cover;
			/* other CSS properties */
		}

		.wrapper {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
		}
	</style>
</head>
<body>
	<!-- class section -->
	<div class="wrapper">
	<section class="class-section spad">
		<div class="container">
			<div class="section-title">
				<h2>Your class:</h2>
			</div>
			<div class="row">
				@foreach (var item in Model)
				{

						<div class="col-sm-4 finance">
					<!-- categorie -->
						<a asp-action="Details" asp-route-id="@item.ClassId">
							<!-- course -->
								<div class="course-item">
									<div class="course-thumb set-bg" style="background: url('@Url.Content("~/img/courses/1.jpg")')">
									</div>
									<div class="course-info">
										<div class="course-text">
											<h5>@Html.DisplayFor(modelItem => item.ClassCode)</h5>
											<p>@Html.DisplayFor(modelItem => item.Description)</p>
										</div>
									</div>
								</div>
							</a>
						</div>
					<!-- categorie -->
				}

			</div>
			</div>
	</section>
	</div>
	<!-- class section end -->
	<!-- Hero section end -->
</body>
</html>